<h1<%= @room.name %>プレイヤー一覧</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
	<td><%= player.user.name %></td>
	<td><%= player.player_role.name %></td>
	<td><%= player.character.name %></td>
        <td><%= link_to 'Show', [@community, @room, player] %></td>
        <td><%= link_to 'Edit', edit_community_room_player_path(@community, @room, player) %></td>
        <td><%= link_to 'Destroy', [@community, @room, player], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_community_room_player_path(@community, @room) %>
