<div class="container">
<h1>コミュニティ一覧</h1>
<p>現在存在するコミュニティ一覧。</p>
<div class="space01"></div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>コミュニティ名</th>
          <th>コミュニティ概要</th>
          <th>コミュニティ説明</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @communities.each do |community| %>
          <tr>
            <td><%= link_to community.name, community %>
	      <% unless community.has_member?(current_user) %>
            <%= link_to "このコミュニティに参加する", new_community_joining_path(community), :class=>"btn btn-primary btn-xs" %></td>
	    <% end %>
            <td ><%= community.about %></td>
            <td><%= community.description %></td>
            <td class="center">
              <%= link_to '表　示', community, :class=>"btn btn-success btn-sm" %>
	    <% if can? :manage, Community %>
              <%= link_to '編　集', edit_community_path(community), :class=>"btn btn-warning btn-sm" %>
              <%= link_to '削　除', community, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' }, :class=>"btn btn-danger btn-sm" %>
	    <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% if current_user %>
  <div class="space01"></div>
  <%= link_to '新しくコミュニティを作成する', new_community_path, :class=>"btn btn-info" %>
<% end %>
<div class="space01"></div>
<%= link_to "Home", welcome_index_path %>｜<%= link_to "戻る", :back %>
<div class="space01"></div>
</div>
