<div class="container">
<div class="row">
  <div class="col-md-offset-1 col-md-10">
    <section class="widget">
      <p>
        <strong>ルーム名:</strong>
        <%= @background.room.name %>
      </p>

      <p>
        <%= image_tag @background.image_url(:thumb) %>
      </p>

      <p>
        <strong>名前:</strong>
        <%= @background.name %>
      </p>

      <p>
        <strong>説明:</strong>
        <%= @background.about %>
      </p>

      <p>
        <strong>登録ユーザー:</strong>
        <%= @background.user.name %>
      </p>

      <p>
        <strong>Access:</strong>
        <%= @background.access %>
      </p>

      <p>
        <strong>コミュニティ:</strong>
        <%= @background.community.name %>
      </p>
    </section>
  </div>
</div>


<div class="space01"></div>
<section class="widget">
  <ol class="breadcrumb">
    <li><%= link_to '編集', edit_community_background_path(@community, @background) %></li>
    <li><%= link_to '背景画像一覧', community_backgrounds_path %></li>
    <li><%= link_to "戻る", :back %></li>
  </ol>
</section>
</div>
