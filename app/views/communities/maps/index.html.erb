<h1>Listing maps</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>サムネイル</th>  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maps.each do |map| %>
      <tr>
          <td><%= map.title %></td>
          <td><%= image_tag map.image_url(:thumb) %></td>
        <td><%= link_to 'Show', [@community, map] %></td>
        <td><%= link_to 'Edit', edit_community_map_path(@community, map) %></td>
        <td><%= link_to 'Destroy', [@community, map], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Map', new_community_map_path(@community) %>
