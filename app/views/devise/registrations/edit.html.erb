<h2><%= current_user.name %>のマイページ</h2>
<p>アカウントの管理、作成したキャラクターの管理ができます。</p>
<div class="space01"></div>

<div class="row">
  <div class="col-md-offset-2 col-md-8 col-xs-12">
    <section class="widget">
      <legend>アカウント情報変更</legend>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
        <%= f.input :name, required: true %>
        <%= f.input :password, autocomplete: "off", hint: "パスワードを変更したくない場合は空白のままにしてください。", required: false %>
        <%= f.input :password_confirmation, required: false %>
        <%= f.input :current_password, hint: "変更するには、現在のパスワードを入力してください。", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "更新する" %>
      </div>
    <% end %>
      </section>
  </div>
</div>

<div class="space01"></div>

<div class="row">
  <div class="col-md-offset-2 col-md-8 col-xs-12">
    <section class="widget">
      <legend>キャラクター管理</legend>
      <%= link_to "キャラクター一覧", characters_path, :class=>"btn btn-default btn-md" %>
      <%= link_to "新規キャラクター作成", new_character_path, :class=>"btn btn-info btn-md" %>
    </section>
  </div>
</div>

<div class="space01"></div>

<div class="row">
  <div class="col-md-offset-2 col-md-8 col-xs-12">
    <section class="widget">
      <legend>アカウントの削除</legend>

      <p><%= link_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, :class=>"btn btn-danger btn-md" %></p>
    </section>
  </div>
</div>

<div class="space01"></div>

<section class="widget">
  <ol class="breadcrumb">
    <li>
      <%= link_to "Home", welcome_index_path %>
    </li>
    <li>
      <%= link_to "Back", :back %>
    </li>
  </ol>
</section>

<div class="space01"></div>
