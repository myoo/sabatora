<div class="panel-group" id="status_list">
    <% @room.players.each do |player| %>
        <div class="panel">
            <div class="panel-heading">
                <%= link_to player.character.name, "#character_#{player.character.id}", data: { toggle: "collapse" }, class: "accordion-toggle collapsed" %>
            </div>
            <div class="panel-collapse collapse" id="character_<%= player.character.id %>">
                <%= render partial: "character_status", locals: { character: player.character} %>
            </div>
        </div>
    <% end %>
</div>