<dl id="chat" class="well" data-uri="<%= request.host %>:<%= request.port %>/websocket"></dl>
<%= form_tag('#', {id: :chat_form}) do %>
	<%= hidden_field :user, :id, value: current_user.id %>

	<%= hidden_field :user, :channel_key, value: current_user.channel_key %>
	
  	<div id="input-chat">
  		<div class="row">
			<div class="col-sm-2 col-xs-12">
				<p id="username"><strong><%= current_user.name %></strong></p>
				<% if @room && @room.character(current_user) %>
				  <p id="username2"><strong><%= @room.character(current_user).name%></strong></p>
				<% end %>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-10 col-xs-12">
				<div class="input-group">
			  		<%= text_field :chat, :message, :class=>"form-control" %>
			  		<div class="input-group-btn">
        				<button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown"> <i class="fa fa-smile-o"></i> <span class="caret"></span></button>
					        <ul class="dropdown-menu dropdown-menu-right" role="menu" id="illustration_list">
					          <li><a href="#">ここに</a></li>
					          <li><a href="#">立ち絵</a></li>
					          <li><a href="#">リスト</a></li>

					        </ul>
     				 </div><!-- /btn-group -->
			  	</div>
			</div>
			<div class="col-sm-2 col-xs-12">	
			  	<%= submit_tag :送　信, id: "send", :class=>"btn btn-default btn-block" %>
			</div>
		</div>
					
	</div>
	<% end %>
