<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :avatar, as: :file %>
    <%= f.input :birth %>
    <%= f.input :sex, collection: Profile::SEX_TYPE, as: :radio_buttons %>
    <%= f.input :introduction %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
