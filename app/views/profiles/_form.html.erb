<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <% if @profile.avatar %>
      <%= image_tag @profile.avatar_url %>
      <%= f.input :remove_avatar, label: "画像を削除", checked_value: true, unchecked_value: false  do %>
            <%= f.check_box :remove_avatar %>
      <% end %>
    <% end %>
    <%= f.hidden :avatar_cache if @profile.avatar_cache %>
    <%= f.input :avatar, as: :file %>

    <%= f.input :birth, :as => :date, start_year: Date.today.year - 12, end_year: 1900 %>
    <%= f.input :sex, collection: Profile::SEX_TYPE, as: :radio_buttons %>
    <%= f.input :introduction %>
  </div>


  <div class="form-actions">
    <%= f.button :submit, name: "preview" %>
  </div>
<% end %>
